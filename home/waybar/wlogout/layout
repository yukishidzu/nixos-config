# wlogout layout for power menu
label = shutdown
action = systemctl poweroff
text = Shutdown
keybind = s

label = reboot
action = systemctl reboot
text = Reboot
keybind = r

label = suspend
action = systemctl suspend
text = Sleep
keybind = z

label = hibernate
action = systemctl hibernate
text = Hibernate
keybind = h

label = logout
action = hyprctl dispatch exit
text = Logout
keybind = e

label = lock
action = hyprlock
text = Lock
keybind = l